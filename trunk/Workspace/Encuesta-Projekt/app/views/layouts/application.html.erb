  <body>
  	
    <div class="container">
      <header>
  		<%= link_to logo, home_path %>
  		<nav class="round">
   		<ul>
      		<li><%= link_to "Home", home_path %></li>
      		<% if signed_in? %>
      			<li><%= link_to "Benutzer", users_path %></li>
      			<li><%= link_to "Mein Profil", current_user %></li>
      			<li><%= link_to "Einstellungen", edit_user_path(current_user) %></li>
      		<% end %>
